                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="link-icon" data-feather="inbox"></i>
                        <span class="menu-title">Settings</span>
                        <i class="link-arrow"></i>
                    </a>
                    <div class="submenu">
                        <ul class="submenu-item">
                            @if (httpAcc.HttpContext.Session.GetString(StaticData.SessionToken) != null &&
                            httpAcc.HttpContext.Session.GetString(StaticData.SessionToken).ToString().Length > 0)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                                </li>
                            }
                            
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</div>